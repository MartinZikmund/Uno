<UserControl x:Class="Uno.UI.Samples.UITests.Image.Image_Scale"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<StackPanel>
		<TextBlock Text="Scaled image" />
		<Image HorizontalAlignment="Left"
			   Width="100"
			   Source="/Assets/Images/ScaledImage.png" />
		<TextBlock Text="Scaled image (ms-appx:)" />
		<Image HorizontalAlignment="Left"
			   Width="100"
			   Source="ms-appx:///Assets/Images/ScaledImage.png" />
		<TextBlock Text="Explicit scale" />
		<Image HorizontalAlignment="Left"
			   Width="100"
			   Source="ms-appx:///Assets/Images/ScaledImage.scale-200.png" />
	</StackPanel>
</UserControl>
